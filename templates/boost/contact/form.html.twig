{% extends site.template~'/base.html.twig' %}

{% block title %}{{ page.page.metaTitle|default }}{% endblock %}
{% block metaDescription %}{{ page.page.metaDescription|default }}{% endblock %}
{% block metaKeywords %}{{ page.page.metaKeywords|default }}{% endblock %}
{% block metaAuthor %}{{ page.page.metaAuthor|default }}{% endblock %}

{% block body %}

    <!-- header -->
    {% include site.template~'/header.html.twig' %}

    <main id="content">
        <div class="container">
            <h1 class="display-4 my-5 my-lg-6 pb-lg-4 text-center">{{ page.page.title }}</h1>
        </div>
        <div class="bg-skew bg-skew-light">
            <div class="container">
                <div class="row justify-content-lg-center">
                    <div class="col-lg-9">
                        {{ page.page.description|raw }}
                        <p class="small">{{ 'Fields marked with an * are required.'|trans }}</p>
                        <div id="contactForm" datasrc="{{ site.api.api_contact }}"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- footer -->
    {% include site.template~'/footer.html.twig' %}

{% endblock %}

{% block javascriptFooter %}
    {{ parent() }}
    {{ encore_entry_script_tags('contactForm,') }}
    {#{{ asset('build/contactForm.js') }}#}
{% endblock %}
