{% extends site.template~'/base.html.twig' %}

{% block title %}{{ site.description }} - Inloggen{% endblock %}

{% block metaDescription %}{{ page.metaDescription|default }}{% endblock %}
{% block metaKeywords %}{{ page.metaKeywords|default }}{% endblock %}
{% block metaAuthor %}{{ page.metaAuthor|default }}{% endblock %}

{% block body %}

    <!-- header -->
    {% include site.template~'/header.html.twig' %}

    <main id="content">
        <div class="container">
            <h1 class="display-4 my-5 my-lg-6 pb-lg-4 text-center">{{ 'Inloggen'|trans }}</h1>
        </div>
        <div class="bg-skew bg-skew-light">
            <div class="container" id="form_search_results_2">
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form class="form-signin" action="{{ path('login') }}" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <h2>{{ 'Inloggen'|trans }}</h2>
                            <p>{{ 'Bestaande klanten'|trans }}</p>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 form-control-label required" for="_username">{{ 'E-mail'|trans }}</label>
                                <div class="col-sm-10">
                                    <input type="text" id="_username" name="_username" required="required" class="form-control" placeholder="{{ 'E-mail'|trans }}" autofocus />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 form-control-label required" for="_password">{{ 'Wachtwoord'|trans }}</label>
                                <div class="col-sm-10">
                                    <input type="password" id="_password" name="_password" required="required" class="form-control" placeholder="{{ 'Wachtwoord'|trans }}" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                                    <label for="remember_me">Keep me logged in</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" >{{ 'Inloggen'|trans }}</button>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <p><a href="{{ path('account_password_reset') }}">{{ 'Wachtwoord vergeten?'|trans }}</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-12 col-md-4">
                        <p>{{ 'Nieuw bij ons?'|trans }}</p>
                        <p>{{ 'Maak binnen enkele minuten een account aan.'|trans }}</p>
                        <p><a href="{{ path('register', {'_locale':app.request.locale}) }}" class="btn btn-secondary">{{ 'Maak een account'|trans }}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- footer -->
    {% include site.template~'/footer.html.twig' %}

{% endblock %}

