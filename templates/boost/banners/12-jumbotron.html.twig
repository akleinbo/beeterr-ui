<section class="d-flex align-items-center min-vh-70 bg-skew bg-skew-primary overflow-hidden text-white">
    <div class="container mb-xl-5 py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <h1 class="display-3 mb-4">{{ banner.title }}</h1>
                {{ banner.description|raw }}
                {% for cta in banner.CTAS|slice(0,1) if cta is defined %}
                    <a class="btn btn-pill btn-light btn-lg" href="{{ cta.slug }}" target="{{ cta.target }}" rel="{{ cta.rel }}" role="button">{{ cta.title }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
