<!-- Features -->
<div class="container">
    <div class="row justify-content-lg-between align-items-lg-center py-4 py-lg-5">
        <div class="col-lg-5 mb-4 mb-lg-0">
            <h2>{{ banner.title }}</h2>
            <hr class="sep border-primary ml-0 mb-3 text-left" role="presentation">
            {{ banner.description|raw }}
            {% for cta in banner.CTAS|slice(0,1) if cta is defined %}
                <a class="btn btn-pill btn-primary" href="{{ cta.slug }}" target="{{ cta.target }}" rel="{{ cta.rel }}" role="button">{{ cta.title }}</a>
            {% endfor %}
            {% for cta in banner.CTAS|slice(1,1) if cta is defined %}
                <a class="btn btn-link" href="{{ cta.slug }}" target="{{ cta.target }}" rel="{{ cta.rel }}" role="button">{{ cta.title }}</a>
            {% endfor %}
        </div>
        <div class="col-lg-6">
            <img src="{{ banner.images|first }}" class="img-fluid img-thumbnail" alt="{{ banner.title }}">
        </div>
    </div>
</div>
