{% extends site.template~'/base.html.twig' %}

{% block title %}{{ page.page.metaTitle|default }}{% endblock %}
{% block metaDescription %}{{ page.page.metaDescription|default }}{% endblock %}
{% block metaKeywords %}{{ page.page.metaKeywords|default }}{% endblock %}
{% block metaAuthor %}{{ page.page.metaAuthor|default }}{% endblock %}

{% block body %}

    <!-- header -->
    {% include site.template~'/header.html.twig' %}

    <main id="content">
        <div class="bg-light mb-5">
            <div class="container">
                <div class="row py-5">
                    <div class="col-lg-9">
                        <h1 class="display-4 mb-4">{{ page.page.title }}</h1>
                        {{ page.page.banner|raw }}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 pl-lg-4 order-lg-2 d-none d-sm-block">
                    <nav id="nav-comp" class="navbar navbar-expand-lg navbar-light sticky-top mb-3 pl-0" aria-label="Components navigation">
                        <a class="collapsed btn btn-outline-dark btn-block d-lg-none mb-3 p-3" href="#collapseOne" data-toggle="collapse" data-target="#navbarComp" aria-expanded="false" aria-controls="navbarComp" aria-label="Toggle navigation">
                            <span class="text-uppercase">Navigation<i class="fas fa-angle-down ml-4 rotate-icon"></i></span>
                        </a>
                        <div class="collapse navbar-collapse" id="navbarComp">
                            <ul class="navbar-nav flex-column">
                                {% for menu in page.scopes %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ menu.slug }}" target="{{ menu.target }}" rel="{{ menu.rel }}">{{ menu.fullname }}</a>
                                    </li>
                                {% endfor %}
                                <li class="nav-item d-none d-lg-block">
                                    <a class="nav-link" href="#">Go top &uarr;</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-9 order-lg-1">
                    <div class="row">
                        {% for item in page.scopes %}
                            <div class="col-sm-6 col-xl-4">
                                <div class="card card-hover my-3">
                                    {% if item.images|first is empty %}
                                        <div class="text-center p-3">
                                            <span class="icon icon-lg icon-success">
                                                <i class="icon-inner fas fa-user"></i>
                                            </span>
                                        </div>
                                    {% else %}
                                        <img class="card-img-top h-100" src="{{ item.images|first }}" alt="{{ item.title }}">
                                    {% endif %}
                                    <div class="card-body text-center">
                                        <h4 class="card-title h5">{{ item.title }}</h4>
                                        {#<p class="text-secondary">CEO</p>#}
                                        <ul class="list-inline mb-0">

                                            {% if item.social.instagram %}
                                                <li class="list-inline-item">
                                                    <a class="icon icon-sm icon-dark" href="{{ item.social.instagram }}">
                                                        <i class="icon-inner fab fa-instagram"></i>
                                                    </a>
                                                </li>
                                            {% endif %}

                                            {% if item.social.twitter %}
                                                <li class="list-inline-item">
                                                    <a class="icon icon-sm icon-dark" href="{{ item.social.twitter }}">
                                                        <i class="icon-inner fab fa-twitter"></i>
                                                    </a>
                                                </li>
                                            {% endif %}

                                            {% if item.social.linkedin %}
                                                <li class="list-inline-item">
                                                    <a class="icon icon-sm icon-dark" href="{{ item.social.linkedin }}">
                                                        <i class="icon-inner fab fa-linkedin-in"></i>
                                                    </a>
                                                </li>
                                            {% endif %}

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>


    <!-- footer -->
    {% include site.template~'/footer.html.twig' %}

{% endblock %}
