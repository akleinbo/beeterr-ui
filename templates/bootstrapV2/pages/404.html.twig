{% extends site.template~'/base.html.twig' %}

{% block title %}404{% endblock %}

{% block body %}

    <!-- header -->
    {% include site.template~'/header.html.twig' %}

    <!-- 404 -->
    <div class="container styling-list-01 bg-white pb-3">
        <div class="row">
            <div class="col-12 pt-3">
                <h1>{{ 'Oeps, pagina niet gevonden.'|trans }}</h1>
                <p>
                    {{ 'Helaas kunnen we de pagina die je zoekt niet meer vinden.'|trans }} <br>
                    {{ 'Dit kan gebeuren wanneer een pagina is gewijzgd of verwijderd.'|trans }} <br>
                    {{ 'Het kan ook zijn dat je een type fout hebt gemaakt bij het invoeren van het adres.'|trans }}
                </p>
                <h2>{{ 'Zoeken'|trans }}</h2>
                <p>
                    {{ 'Gebruik onze zoekfunctie boven in de pagina om onze website te doorzoeken.  '|trans }}
                </p>
                <p>
                    <a href="{{ path('default') }}">
                        <span class="fa fa-arrow-circle-left"></span>
                        {{ 'Home'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- footer -->
    {% include site.template~'/footer.html.twig' %}

{% endblock %}
