{% extends '/bootstrap/base.html.twig' %}

{% block title %}{{ page.page.metaTitle|default }}{% endblock %}
{% block metaDescription %}{{ page.page.metaDescription|default }}{% endblock %}

{% block body %}

    <!-- header -->
    {% include '/bootstrap/'~site.template~'.html.twig' %}

    <!-- 404 -->
    <div class="container-fluid styling-container p-0">
        <div class="container styling-content bg-white py-3">
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'Oeps, pagina niet gevonden.'|trans }}</h1>
                    <p>
                        {{ 'Helaas kunnen we de pagina die je zoekt niet meer vinden.'|trans }} <br>
                        {{ 'Dit kan gebeuren wanneer een pagina is gewijzgd of verwijderd.'|trans }} <br>
                        {{ 'Het kan ook zijn dat je een type fout hebt gemaakt bij het invoeren van het adres.'|trans }}
                    </p>
                    <h2>{{ 'Zoeken'|trans }}</h2>
                    <p>
                        {{ 'Gebruik onze zoekfunctie boven in de pagina om onze website te doorzoeken.  '|trans }}
                    </p>
                    <p>
                        <a href="{{ path('default', {'_locale':site.locale}) }}">
                            <span class="fa fa-arrow-circle-left"></span>
                            {{ 'Home'|trans }}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    {% include '/bootstrap/footer.html.twig' %}

{% endblock %}
