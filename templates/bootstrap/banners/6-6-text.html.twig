<section class="pb-3">
    <div class="row">
        {% for item in banner.items %}
            <div class="col-12 col-md-6">
                <h3 class="h4">{{ item.title }}</h3>
                <hr class="ml-0 mb-3 text-left">
                <p class="mb-md-0">{{ item.description|raw }}</p>
            </div>
        {% endfor %}
    </div>
</section>
