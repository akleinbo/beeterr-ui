<!-- icons -->
<div class="container py-5">
    <div class="row">
        <div class="container">
            <div class="row">
                {% for item in banner.items %}
                    <div class="col-sm-6 col-md-4 mb-4 mb-md-5">
                        <div class="pr-lg-3 text-center">
                            <span class="icon icon-primary mb-3">
                                <i class="icon-inner {{ item.icon }}" aria-hidden="true"></i>
                            </span>
                            <h3 class="h4">{{ item.title }}</h3>
                            <p class="mb-md-0">{{ item.description|raw }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
